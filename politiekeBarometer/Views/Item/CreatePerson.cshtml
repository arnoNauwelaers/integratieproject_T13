@using BL.Domain;
@model dynamic

@{
  ViewBag.Title = "CreatePerson";
  List<Organization> organizations = ViewBag.Organizations;
}

<h2>CreatePerson</h2>


<div class="row">
    <div class="col-md-5">
        <h2>Maak een nieuwe persoon aan</h2>

        <form action="/Item/CreatePerson" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">

                <label for="name">Naam van persoon:</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="naam">
            </div>
            <div class="form-group">
                <label for="admin">Organizatie van de persoon</label>
                <select class="form-control" id="organization" name="organization">
                    @foreach (Organization o in organizations)
            {
                <option value="@o.ItemId">@o.Name</option>}
                </select>
            </div>
            <div class="form-group">
                <fieldset>
                    <legend>Social Media profiel van de organizatie</legend>
                    <label for="src">Bron social media profiel</label>
                    <input type="text" name="src" class="form-control" id="src" placeholder="twitter, facebook..." />
                    <label for="url">Link naar profiel</label>
                    <input type="text" name="url" class="form-control" id="url" />
                </fieldset>
            </div>
            <input type="submit" value="submit" />
        </form>

    </div>
    <div>
        @Html.ActionLink("Back to List", "PersonIndex")
    </div>
</div>

