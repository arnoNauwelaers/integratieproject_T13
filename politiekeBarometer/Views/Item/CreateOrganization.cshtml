@using BL.Domain;
@model dynamic

@{
    ViewBag.Title = "Create Organization";
    
}

<div class="row">
    <div class="col-md-5">
        <h2>Maak een nieuwe organizatie aan</h2>

        <form action="/Item/CreateOrganization" method="post">
            <div class="form-group">
                
                <label for="name">Naam van organizatie:</label>
                <input type="text" name="name" class="form-control" id="name" placeholder="organizatie naam">
            </div>
            <div class="form-group">
                <fieldset>
                    <legend>Social Media profiel van de organizatie</legend>
                    <label for="src">Bron social media profiel</label>
                    <input type="text" name="src" class="form-control" id="src" placeholder="twitter, facebook..." />
                    <label for="url">Link naar profiel</label>
                    <input type="text" name="url" class="form-control" id="url" />
                </fieldset>
            </div>
            <input type="submit" value="submit" />
        </form>

    </div>
</div>
