@using BL.Domain;
@model BL.Domain.Person

@{
    ViewBag.Title = "PersonDetails";
    List<SocialMediaProfile> profiles = ViewBag.Profiles;
}

<h2>PersonDetails</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Organization)</dt>
        <dd>
            @Html.DisplayFor(model => model.Organization.Name)
        </dd>


        <dt>@Html.DisplayNameFor(model => model.SocialMediaProfiles)</dt>
        <dd>
            @foreach (var smp in profiles)
            {
                <div>
                    @smp.Source | @smp.Url <hr />
                </div>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Voeg Social Media Profiel Toe", "AddSocialMediaProfileToPerson", new { id = Model.ItemId }) |
    @Html.ActionLink("Edit", "EditPerson", new { id = Model.ItemId }) |
    @Html.ActionLink("Back to List", "PersonIndex")
</p>
